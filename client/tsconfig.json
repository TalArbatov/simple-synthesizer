{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "vite/client"
        ]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
